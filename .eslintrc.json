{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript"
  ],
  "overrides": [],
  "parserOptions": {
    "extends": [
      "airbnb",
      "airbnb-typescript"
    ],
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": [
      "./tsconfig.json"
    ]
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/function-component-definition": [
      2,
      {
        "namedComponents": [
          "arrow-function"
        ]
      }
    ],
    "linebreak-style": ["error", "windows"]
  }
}